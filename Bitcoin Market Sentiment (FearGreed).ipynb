import pandas as pd
import numpy as np
import streamlit as st
import matplotlib.pyplot as plt
from sklearn.model_selection import train_test_split
from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import classification_report

st.title("Hyperliquid Trader Behavior vs Market Sentiment")

fear = pd.read_csv("fear_greed_index.csv")
data = pd.read_csv("historical_data.csv")

fear["date"] = pd.to_datetime(fear["date"]).dt.date
data["date"] = pd.to_datetime(data["date"]).dt.date

df = data.merge(fear, on="date", how="left")

st.header("Dataset Overview")
st.write("Rows:", df.shape[0], "Columns:", df.shape[1])

st.subheader("Missing Values")
st.write(df.isnull().sum())

st.subheader("Duplicates")
st.write("Fear:", fear.duplicated().sum())
st.write("Data:", data.duplicated().sum())

df["sentiment_bucket"] = pd.cut(
    df["value"], bins=[0, 40, 60, 100],
    labels=["Fear", "Neutral", "Greed"]
)

st.header("Trading Activity")

trades_per_day = df.groupby("date").size()
st.line_chart(trades_per_day)

activity = df.groupby("sentiment_bucket").size().to_frame("trade_count")
st.bar_chart(activity)

if "pnl" in df.columns:
    st.header("Performance Analysis")

    sentiment_perf = df.groupby("sentiment_bucket").agg(
        avg_pnl=("pnl", "mean"),
        win_rate=("pnl", lambda x: (x > 0).mean()),
        trades=("pnl", "count")
    )

    st.dataframe(sentiment_perf)
    st.bar_chart(sentiment_perf["avg_pnl"])

if "leverage" in df.columns:
    st.header("Risk Behavior")

    fig, ax = plt.subplots()
    ax.hist(df["leverage"].dropna(), bins=30)
    st.pyplot(fig)

behavior = df.groupby("sentiment_bucket").size().to_frame("trade_count")

if "leverage" in df.columns:
    behavior["avg_leverage"] = df.groupby("sentiment_bucket")["leverage"].mean()

if "position_size" in df.columns:
    behavior["avg_position"] = df.groupby("sentiment_bucket")["position_size"].mean()

st.header("Behavior by Sentiment")
st.dataframe(behavior)

st.header("Strategy Insights")
st.write(
    """
    • Reduce leverage during Fear periods to manage risk  
    • Increase trading activity only when sentiment improves and performance is positive  
    """
)

if "pnl" in df.columns:
    st.header("Predictive Model")

    df["profit_bucket"] = np.where(df["pnl"] > 0, 1, 0)

    features = df[["value"]]
    if "leverage" in df.columns:
        features["leverage"] = df["leverage"]
    if "position_size" in df.columns:
        features["position_size"] = df["position_size"]

    features = features.dropna()
    target = df.loc[features.index, "profit_bucket"]

    X_train, X_test, y_train, y_test = train_test_split(
        features, target, test_size=0.2, random_state=42
    )

    model = RandomForestClassifier()
    model.fit(X_train, y_train)

    preds = model.predict(X_test)

    st.text("Model Evaluation")
    st.text(classification_report(y_test, preds))
